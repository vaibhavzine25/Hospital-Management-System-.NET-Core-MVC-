@using WebApplicationSampleTest2.Models
@model Medicine

@{
    ViewData["Title"] = Model.isUpdate ? "Edit Medicine" : "Create Medicine";
}

<h4 class="card-title">
    @(Model.isUpdate ? "Edit Medicine" : "Create Medicine")
</h4>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">

                <form id="medicineForm"
                      asp-action="Create"
                      asp-controller="Medicine"
                      method="post"
                      novalidate>

                    <!-- ✅ REQUIRED FOR UPDATE -->
                    @Html.HiddenFor(x => x.MedicineId)
                    @Html.HiddenFor(x => x.isUpdate)

                    <div class="row">
                        <!-- Medicine Name -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Medicine Name</label>
                                <input type="text"
                                       asp-for="MedicineName"
                                       class="form-control"
                                       id="MedicineName"
                                       placeholder="Enter Medicine Name">
                                <small class="text-danger" id="errMedicineName"></small>
                            </div>
                        </div>

                        <!-- Type -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Type</label>
                                <select id="Type" asp-for="Type" class="form-select">
                                    <option value="">Select Type</option>
                                    <option>Tablet</option>
                                    <option>Syrup</option>
                                    <option>Capsule</option>
                                    <option>Injection</option>
                                </select>
                                <small class="text-danger" id="errType"></small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Quantity + Schedule -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Quantity</label>
                                <input type="number"
                                       asp-for="Quantity"
                                       class="form-control"
                                       id="Quantity">
                                <small class="text-danger" id="errQuantity"></small>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               asp-for="Morning"
                                               id="Morning" />
                                        <label class="form-check-label">Morning</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               asp-for="Afternoon"
                                               id="Afternoon" />
                                        <label class="form-check-label">Afternoon</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               asp-for="Evening"
                                               id="Evening" />
                                        <label class="form-check-label">Evening</label>
                                    </div>
                                </div>
                                <p class="text-danger" id="errSchedule"></p>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea asp-for="Description"
                                          class="form-control"
                                          id="Description"
                                          rows="4"></textarea>
                                <small class="text-danger" id="errDescription"></small>
                            </div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div>
                        <button type="submit" class="btn btn-primary">
                            @(Model.isUpdate ? "Update" : "Submit")
                        </button>

                        <a asp-action="Index"
                           asp-controller="Medicine"
                           class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/assets/libs/jquery/jquery.min.js"></script>

    <script>
        function clearErrors() {
            $(".text-danger").text("");
            $(".form-control, .form-select").removeClass("is-invalid");
        }

        function setError(inputId, errorId, message) {
            if (inputId !== "") {
                $("#" + inputId).addClass("is-invalid");
            }
            $("#" + errorId).text(message);
        }

        $("#medicineForm").on("submit", function (e) {

            clearErrors();
            let isValid = true;

            // Medicine Name
            if ($("#MedicineName").val().trim() === "") {
                setError("MedicineName", "errMedicineName", "Medicine Name is required");
                isValid = false;
            }

            // Type
            if ($("#Type").val().trim() === "") {
                setError("Type", "errType", "Please select medicine type");
                isValid = false;
            }

            // Quantity
            let qty = $("#Quantity").val();
            if (qty === "" || qty <= 0) {
                setError("Quantity", "errQuantity", "Quantity must be greater than 0");
                isValid = false;
            }

            // Description
            if ($("#Description").val().trim() === "") {
                setError("Description", "errDescription", "Description is required");
                isValid = false;
            }

            // ✅ AT LEAST ONE CHECKBOX REQUIRED
            if (
                !$("#Morning").is(":checked") &&
                !$("#Afternoon").is(":checked") &&
                !$("#Evening").is(":checked")
            ) {
                setError("", "errSchedule", "Select at least one schedule (Morning / Afternoon / Evening)");
                isValid = false;
            }

            if (!isValid) {
                e.preventDefault(); // ⛔ stop submit
            }
        });
    </script>
}



