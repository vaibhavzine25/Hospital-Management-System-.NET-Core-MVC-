@using WebApplicationSampleTest2.Models
@model List<Hospital>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-success" asp-controller="Hospital" asp-action="Create">
        + Add Hospital
    </a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hospital List</h4>
                <p class="card-title-desc">Below is the list of all hospitals in the system.</p>

                <!-- SEARCH -->
                <div class="d-flex justify-content-end mb-3">
                    <form id="searchForm" method="get" asp-action="Index" class="d-flex">
                        <input type="text" name="search" id="searchInput"
                               value="@ViewBag.Search"
                               class="form-control me-2 w-auto"
                               placeholder="Search hospital..." />
                        <input type="hidden" name="page" value="1" />
                    </form>
                </div>

                <div class="table-rep-plugin">
                    <div class="table-responsive mb-0" style="overflow-x:auto;" data-pattern="priority-columns">
                        <table id="hospitalTable" class="table align-middle text-nowrap  table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Registration Number</th>
                                    <th>Type</th>
                                    <th>Parent Hospital</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    int serial = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@serial</td>                                        
                                            <td>@item.Name</td>
                                            <td>@item.PhoneNumber</td>
                                            <td>@item.EmailId</td>
                                            <td>@item.RegistrationNumber</td>
                                            <td>@(item.IsSubHospital ? "Sub Hospital" : "Main Hospital")</td>
                                            <td>@(item.IsSubHospital? item.ParentHospitalName: "-")</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="openDeleteModal(@item.Id)">Delete</button>
                                            </td>
                                        </tr>
                                        serial++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="11" class="text-center text-muted">No records found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- PAGINATION -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-end mt-3">
                            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                                   asp-route-search="@ViewBag.Search">Previous</a>
                            </li>

                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-search="@ViewBag.Search">@i</a>
                                </li>
                            }

                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                                   asp-route-search="@ViewBag.Search">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>
<!-- DELETE MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title text-danger">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete this hospital?
                <br />
                <strong>This action cannot be undone.</strong>
            </div>

            <div class="modal-footer">
                <form method="post" asp-action="DeleteConfirmed" asp-controller="Hospital">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteId" name="id" />

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>

                    <button type="submit" class="btn btn-danger">
                        Yes, Delete
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    
    <script>
      function openDeleteModal(id) {
            document.getElementById("deleteId").value = id;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        let timer;
        document.getElementById("searchInput").addEventListener("keyup", function () {
            clearTimeout(timer);
            timer = setTimeout(() => {
                document.getElementById("searchForm").submit();
            }, 2000);
        });
    </script>
}
