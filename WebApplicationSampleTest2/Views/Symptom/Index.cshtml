@using WebApplicationSampleTest2.Models
@model List<Symptom>

<div class=" d-flex justify-content-end">
    <a class="btn btn-success" asp-action="Create">
        + Add Symptom
    </a>
</div>
<br />
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Symptom List</h4>
                <p class="card-title-desc">
                    Below is the list of all symptoms available in the system.
                </p>

                <!-- SEARCH -->
                <div class="d-flex justify-content-end mb-3">
                    <form id="searchForm" method="get" asp-action="Index" class="d-flex">
                        <input type="text" name="search" id="searchInput"
                               value="@ViewBag.SearchTerm"
                               class="form-control me-2 w-auto"
                               placeholder="Search symptom..." />
                        <input type="hidden" name="page" value="1" />
                    </form>
                </div>

                <div class="table-rep-plugin">
                    <div class="table-responsive mb-0" data-pattern="priority-columns">
                        <table id="symptomTable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Symptom Name</th>
                                    <th>Sub Name</th>
                                    <th>Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    int serial = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@serial</td>
                                            <td>@item.SymptomName</td>
                                            <td>@item.SubName</td>
                                            <td>@item.Description</td>
                                            <td>
                                                <a asp-action="Create"
                                                   asp-route-id="@item.SymptomId"
                                                   class="btn btn-sm btn-primary me-1">
                                                    Edit
                                                </a>
                                                <button class="btn btn-sm btn-danger"
                                                        onclick="confirmDelete(@item.SymptomId)">
                                                    Delete
                                                </button>
                                            </td>
                                        </tr>
                                        serial++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            No records found
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- PAGINATION -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-end mt-3">
                            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                                   asp-route-search="@ViewBag.SearchTerm">Previous</a>
                            </li>

                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-search="@ViewBag.SearchTerm">@i</a>
                                </li>
                            }

                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                                   asp-route-search="@ViewBag.SearchTerm">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Confirmation</h5>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this record?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            var url = '/Symptom/Delete/' + id;
            document.getElementById("deleteForm").action = url;

            var modal = new bootstrap.Modal(
                document.getElementById('deleteModal')
            );
            modal.show();
        }

        // Auto-submit search input
        let timer;
        document.getElementById("searchInput").addEventListener("keyup", function () {
            clearTimeout(timer);
            timer = setTimeout(() => {
                document.getElementById("searchForm").submit();
            }, 2000);
        });
    </script>
}
