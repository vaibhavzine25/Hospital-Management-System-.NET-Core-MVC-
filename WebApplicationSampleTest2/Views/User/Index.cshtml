@using WebApplicationSampleTest2.Models
@model List<User>

<div class="row">
    <div class="col-12">

        <!-- HEADER -->
        <div class="d-flex justify-content-end mb-3">
            <a class="btn btn-success" asp-controller="User" asp-action="Create">
                + Add User
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <div>
                    <h4 class="mb-1">User List</h4>
                    <p class="text-muted mb-0">
                        Below is the list of all users available in the system.
                    </p>
                </div>
                <!-- SEARCH -->
                <div class="d-flex justify-content-end mb-3">
                    <form id="searchForm" method="get" asp-action="Index">
                        <input type="text"
                               name="search"
                               id="searchInput"
                               value="@ViewBag.SearchTerm"
                               class="form-control"
                               style="width:220px"
                               placeholder="Search user..." />
                        <input type="hidden" name="page" value="1" />
                    </form>
                </div>

                <!-- TABLE -->
                <div class="table-responsive">
                    <table class="table align-middle table-hover text-nowrap">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Login Name</th>
                                <th>Full Name</th>
                                <th>Hospital</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int serial = ((ViewBag.CurrentPage - 1) * 5) + 1;

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@serial</td>
                                        <td>@item.LoginName</td>
                                        <td>@item.FirstName @item.LastName</td>
                                        <td>@item.HospitalName</td>
                                        <td>@item.PhoneNo</td>
                                        <td>@item.EmailId</td>
                                        <td>@item.Role</td>
                                        <td>
                                            <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                                @(item.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-controller="User"
                                               asp-action="Edit"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-primary">
                                                Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" onclick="openDeleteModal(@item.Id)">
                                                Delete
                                            </button>

                                        </td>
                                    </tr>
                                    serial++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center text-muted py-3">
                                        No users found
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- PAGINATION -->
                @if (ViewBag.TotalPages > 1)
                {
                    <div class="d-flex justify-content-end mt-3">
                        <ul class="pagination mb-0">
                            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                                   asp-route-search="@ViewBag.SearchTerm">
                                    Previous
                                </a>
                            </li>

                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-search="@ViewBag.SearchTerm">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                                   asp-route-search="@ViewBag.SearchTerm">
                                    Next
                                </a>
                            </li>
                        </ul>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


<!-- DELETE MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title text-danger">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete this user?
                <br />
               
            </div>

            <div class="modal-footer">
                <form method="post" asp-action="DeleteConfirmed" asp-controller="User">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteId" name="id" />

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>

                    <button type="submit" class="btn btn-danger">
                        Yes, Delete
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function openDeleteModal(id) {
            document.getElementById("deleteId").value = id;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
    <script>
       

        let timer;
        document.getElementById("searchInput").addEventListener("keyup", function () {
            clearTimeout(timer);
            timer = setTimeout(() => {
                document.getElementById("searchForm").submit();
            }, 1000);
        });
    </script>
}
